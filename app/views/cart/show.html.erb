<h2>Your Cart</h2>

<% if @cart_items.any? %>
  <% @cart_items.each do |product| %>
    <div class="cart-item">
      <%= image_tag product.image, size: "80x80" if product.image.attached? %>
      <strong><%= product.name %></strong>
      â‚¹ <%= product.price %>

      <%= button_to "Remove",
            remove_from_cart_path(product),
            method: :delete,
            class: "btn" %>
    </div>
  <% end %>
<% else %>
  <p>Your cart is empty</p>
<% end %>
