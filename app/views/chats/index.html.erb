<div class="max-w-3xl mx-auto mt-10 bg-white shadow rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-4">ðŸ’¬ Global Chat</h1>

  <div id="messages" class="h-80 overflow-y-auto border p-3 mb-4 rounded">
    <% @messages.each do |message| %>
      <div class="mb-2">
        <strong><%= message.user.email %></strong>:
        <%= message.content %>
        <span class="text-xs text-gray-500 ml-2">
          <%= message.created_at.strftime("%H:%M") %>
        </span>
      </div>
    <% end %>
  </div>

  <%= form_with model: @message, url: messages_path, data: { turbo: false }, class: "flex gap-2" do |f| %>
    <%= f.text_field :content,
          class: "flex-1 border rounded px-3 py-2",
          placeholder: "Type a message..." %>

    <%= f.submit "Send",
          class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  <% end %>
</div>
