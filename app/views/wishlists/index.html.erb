<div class="max-w-7xl mx-auto px-6 py-12">
  <h1 class="text-4xl font-bold text-gray-800 mb-10">
    ‚ù§Ô∏è My Wishlist
  </h1>

  <% if @wishlists.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
      <% @wishlists.each do |wishlist| %>
        <% product = wishlist.product %>

        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition p-5">

          <!-- Product Image -->
          <% if product.image.attached? %>
            <%= image_tag product.image,
                  class: "h-40 w-full object-cover rounded-lg mb-4" %>
          <% else %>
            <div class="h-40 w-full bg-gray-100 flex items-center justify-center rounded-lg mb-4 text-gray-400">
              No Image
            </div>
          <% end %>

          <!-- Product Info -->
          <h2 class="font-semibold text-gray-800 truncate">
            <%= product.name %>
          </h2>

          <p class="text-indigo-600 font-bold mt-2">
            ‚Çπ <%= number_to_currency(product.price, unit: "", precision: 0) %>
          </p>

          <!-- Actions -->
          <div class="flex gap-3 mt-5">
            <%= link_to "View",
                  product_path(product),
                  class: "flex-1 text-center border border-gray-300 rounded-lg py-2 hover:bg-gray-100 transition" %>

            <%= button_to "Move to Cart",
                  move_to_cart_wishlist_path(wishlist),
                  method: :post,
                  class: "flex-1 bg-indigo-600 text-white rounded-lg py-2 hover:bg-indigo-700 transition" %>
          </div>

          <!-- Remove Button -->
          <div class="mt-3">
            <%= button_to "Remove",
                  wishlist_path(wishlist),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure you want to remove this item?" },
                  class: "w-full bg-red-500 text-white rounded-lg py-2 hover:bg-red-600 transition" %>
          </div>

        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-lg">
      Your wishlist is empty üíî
    </p>
  <% end %>
</div>