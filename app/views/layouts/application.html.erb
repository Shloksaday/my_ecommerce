<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gradient-to-br from-slate-50 via-indigo-50 to-purple-100 text-gray-800 min-h-screen">


    <!-- üî• Premium Navbar -->
    <nav class="sticky top-0 z-50 backdrop-blur-lg bg-white/70 border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">

        <!-- Logo -->
        <%= link_to root_path, class: "flex items-center gap-2 text-2xl font-extrabold tracking-tight text-gray-900 hover:opacity-80 transition" do %>
          <span class="text-indigo-600">üõçÔ∏è</span>
          MyStore
        <% end %>

        <!-- Center Navigation -->
        <div class="hidden lg:flex items-center space-x-8 font-medium text-gray-600">

          <%= link_to "Products", products_path,
                class: "hover:text-indigo-600 transition" %>

          <%= link_to wishlists_path,
                class: "hover:text-pink-500 transition" do %>
            Wishlist
          <% end %>

          <%= link_to chat_index_path,
                class: "hover:text-indigo-600 transition" do %>
            AI Chat
          <% end %>

          <%= link_to admin_root_path,
                class: "hover:text-gray-900 transition" do %>
            Admin
          <% end %>
        </div>

        <!-- Right Side -->
        <div class="flex items-center gap-6">

          <!-- Search Bar -->
          <%= form_with url: products_path, method: :get, local: true,
                class: "hidden md:flex items-center bg-white border border-gray-200 rounded-full px-4 py-2 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 transition" do %>

            <%= text_field_tag :query, params[:query],
                  placeholder: "Search products...",
                  class: "bg-transparent outline-none text-sm w-48" %>

            <%= submit_tag "üîç",
                  class: "ml-2 text-gray-500 hover:text-indigo-600 bg-transparent cursor-pointer" %>
          <% end %>


          <!-- Cart -->
          <%= link_to cart_path,
                class: "relative hover:scale-105 transition" do %>
            üõí
            <span class="absolute -top-2 -right-3 bg-indigo-600 text-white text-xs font-bold px-2 py-0.5 rounded-full shadow">
              <%= session[:cart]&.values&.sum || 0 %>
            </span>
          <% end %>


          <!-- Auth -->
          <% if user_signed_in? %>
            <%= link_to "Logout",
                  destroy_user_session_path,
                  data: { turbo_method: :delete },
                  class: "text-red-500 font-medium hover:text-red-600 transition" %>
          <% else %>
            <%= link_to "Login",
                  new_user_session_path,
                  class: "font-medium text-gray-700 hover:text-indigo-600 transition" %>

            <%= link_to "Sign Up",
                  new_user_registration_path,
                  class: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-5 py-2 rounded-full font-semibold shadow hover:shadow-lg hover:opacity-90 transition duration-300" %>
          <% end %>

        </div>
      </div>
    </nav>


    <!-- Page Content -->
    <main class="max-w-7xl mx-auto px-6 py-10">
      <%= yield %>
    </main>

  </body>
</html>
